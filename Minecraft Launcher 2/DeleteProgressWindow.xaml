<Window x:Class="Minecraft_Launcher_2.DeleteProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minecraft_Launcher_2"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        UseLayoutRounding="True"
        MouseDown="Window_MouseDown"
        Title="DeleteProgressWindow" Width="400" SizeToContent="Height">
    <Border Background="{StaticResource BlackBrush}" BorderBrush="Black" BorderThickness="1">
        <StackPanel Margin="10">
            <ProgressBar x:Name="prgCurrent" Height="22" Value="50"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="tblCurrent" Margin="0,5,5,5" Foreground="{StaticResource WhiteBrush}" Text="80%"/>
                <TextBlock x:Name="tblState" Margin="0,5,5,5" Foreground="{StaticResource GrayBrush}" Text="assets_030201.png 삭제 중.."/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

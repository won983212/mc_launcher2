<Window x:Class="Minecraft_Launcher_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minecraft_Launcher_2"
        xmlns:properties="clr-namespace:Minecraft_Launcher_2.Properties"
        xmlns:controls="clr-namespace:Minecraft_Launcher_2.Controls"
        xmlns:converters="clr-namespace:Minecraft_Launcher_2.Converters"
        xmlns:viewmodel="clr-namespace:Minecraft_Launcher_2.ViewModels"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize" Title="Minecraft Launcher"
        MouseDown="Window_MouseDown" Width="854" Height="480">
    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <converters:EnumToIntConverter x:Key="EnumToIntConverter" />
    </Window.Resources>
    <Grid>
        <!-- background -->
        <controls:BackgroundImage />

        <!-- login panel -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel.Effect>
                <DropShadowEffect Color="#FF636363" BlurRadius="15" ShadowDepth="0" RenderingBias="Quality" Opacity="0.5"/>
            </StackPanel.Effect>
            <controls:MultiplexerPanel TextElement.Foreground="White" Width="250" Height="350"
                                        ActiveChildIndex="{Binding ConnectionState, Converter={StaticResource EnumToIntConverter}}">
                <controls:MultiplexerPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#aa3a90ff" Offset="0"/>
                        <GradientStop Color="#aa2387db" Offset="1"/>
                    </LinearGradientBrush>
                </controls:MultiplexerPanel.Background>
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" Value="0" IsIndeterminate="True" Width="40" Height="40"/>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock FontSize="28" HorizontalAlignment="Center" Margin="8">Welcome!</TextBlock>
                    <TextBlock FontSize="12" HorizontalAlignment="Center" LineHeight="20" TextAlignment="Center" Text="{Binding Motd}"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" ToolTip="{Binding ConnectionErrorMessage}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Warning" Width="20" Height="20" Margin="10" VerticalAlignment="Center" />
                        <TextBlock FontSize="12" VerticalAlignment="Center">서버와 연결할 수 없습니다.</TextBlock>
                    </StackPanel>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}" BorderBrush="White" Width="100" Foreground="White"
                            HorizontalAlignment="Left" FontSize="8pt" Margin="50,10" Command="{Binding ReconnectCommand}">
                        재접속 시도
                    </Button>
                </StackPanel>
            </controls:MultiplexerPanel>
            <Border Background="white" Width="400" Height="350">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" TextElement.Foreground="{StaticResource PrimaryHueDarkBrush}" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="Account" Width="32" Height="32"></materialDesign:PackIcon>
                        <TextBlock FontSize="20" VerticalAlignment="Center" Margin="8,0">로그인</TextBlock>
                    </StackPanel>
                    <TextBox materialDesign:HintAssist.Hint="마인크래프트 닉네임" Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Width="300" Margin="0,60" Height="45" IsEnabled="{Binding IsFormEnabled}" 
                             Text="{Binding PlayerName, Source={x:Static properties:Settings.Default}}"/>
                    <Button materialDesign:ButtonAssist.CornerRadius="0" Width="100" FontSize="12" HorizontalAlignment="Right" Content="{Binding StartText}"
                            Command="{Binding StartCommand}"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <controls:DownloadStatusBar HorizontalAlignment="Center" VerticalAlignment="Bottom" ProgressValue="{Binding DownloadProgress}"
                                     IsActive="{Binding IsShowDownloadStatus}" StatusText="{Binding DownloadStatus}" Margin="0,0,0,5" />

        <!-- version text -->
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="LightGray" Margin="10">
            <Run>v</Run>
            <Run Text="{Binding ClientVersion, Mode=OneWay, Source={x:Static properties:Settings.Default}}"/>
        </TextBlock>

        <!-- Control Panel -->
        <controls:ControlPanel IsShow="{Binding ShowControlPanel, Mode=TwoWay}" DataContext="{Binding Mode=OneWay}"/>

        <!-- ErrorDialog -->
        <controls:ErrorDialog x:Name="dialogError" ErrorObject="{Binding ErrorInfo}" IsShow="{Binding ShowErrorDialog, Mode=TwoWay}"/>

        <!-- Top Snackbar -->
        <materialDesign:Snackbar x:Name="ErrorSnackbar" VerticalAlignment="Top" Background="{StaticResource SecondaryHueMidBrush}" 
                                 Foreground="White" MessageQueue="{Binding SnackMessages}">
            <materialDesign:Snackbar.Resources>
                <Style BasedOn="{StaticResource {x:Type materialDesign:SnackbarMessage}}" TargetType="{x:Type materialDesign:SnackbarMessage}">
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </materialDesign:Snackbar.Resources>
        </materialDesign:Snackbar>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            <!-- Signal button -->
            <Button Style="{StaticResource MaterialDesignIconButton}" Width="30" Height="30" Visibility="{Binding SignalIconVisibility}" Command="{Binding ReconnectCommand}">
                <Button.ToolTip>
                    <StackPanel>
                        <TextBlock Text="{Binding ServerInfo.Motd}" FontSize="12pt"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <materialDesign:PackIcon Kind="AccountGroup" Margin="0,0,5,0" Width="18" Height="18" />
                            <TextBlock Text="{Binding ServerInfo.PlayerCount}" Margin="0,0,8,0"/>
                            <materialDesign:PackIcon Kind="Signal" Margin="0,0,5,0" Width="18" Height="18" />
                            <TextBlock Text="{Binding ServerInfo.Ping}"/>
                        </StackPanel>
                        <Separator Margin="0,5"/>
                        <TextBlock Text="클릭시 새로고침합니다." HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button.ToolTip>
                <materialDesign:PackIcon Kind="{Binding SignalIcon}" Foreground="White" Width="18" Height="18"/>
            </Button>

            <!-- Console button -->
            <Button Style="{StaticResource MaterialDesignIconButton}" Width="30" Height="30" ToolTip="콘솔 열기" Command="{Binding ShowConsoleCommand}">
                <materialDesign:PackIcon Kind="Console" Foreground="White" Width="18" Height="18" />
            </Button>
            
            <!-- Config button -->
            <Button Style="{StaticResource MaterialDesignIconButton}" Width="30" Height="30" ToolTip="설정" Command="{Binding ShowSettingCommand}">
                <materialDesign:PackIcon Kind="Settings" Foreground="White" Width="18" Height="18" />
            </Button>

            <!-- Exit button -->
            <Button Style="{StaticResource MaterialDesignIconButton}" Click="Exit_Click" Width="30" Height="30" ToolTip="종료">
                <materialDesign:PackIcon Kind="Close" Foreground="White" Width="18" Height="18" />
            </Button>
        </StackPanel>
    </Grid>
</Window>
